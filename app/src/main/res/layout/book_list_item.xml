<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/bookListItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bookListItemTitle"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Simple Title"
                android:textColor="@color/firstlyMain"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/bookListItemPageCount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookListItemAuthor"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"

                android:text="Simple Author"
                android:textColor="@color/secondaryMain"
                app:layout_constraintEnd_toStartOf="@+id/bookListItemDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookListItemTitle" />

            <TextView
                android:id="@+id/bookListItemPageCount"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="245"
                android:textColor="@color/secondaryMain"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookListItemDate"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="01/01/1999"
                android:textSize="18sp"
                android:textColor="@color/secondaryMain"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookListItemPageCount" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>